extends layout

block content
    body
        div.sections
            section.splash
            section.committees
                for committee in site.committees
                    div HEY
                    div.committee(id="#{committee.id}")
                        if committee.text_first
                            div(class = "left #{committee.text_size}")
                                h2 #{committee.title}
                                p #{committee.description}
                            div(class = "right #{committee.logo_size}")
                                img.logo(src="#{committee.logo}")
                        else
                            div(class = "left #{committee.logo_size}")
                                img.logo(src="#{committee.logo}")
                            div(class = "right #{committee.text_size}")
                                h2 #{committee.title}
                                p #{committee.description}
            section.calltoaction
                img.background
                h2.wewantyouhere
                img.location
                img.spark