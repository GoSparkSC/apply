@import '_settings'

normalize-css()

$content-area = 92%

body
    font-family 'Proxima Nova'
    background white

.committees
    width $content-area
    margin 0 auto; padding 50px 0

    .committee
        width 100%
        padding 35px 0
        display block
        font-size 0

        .sm, .lg
            display inline-block
            vertical-align top
            font-size $font-size /* default */

        .sm
            width 25%

            img
                width 35%
                margin 0 auto
                display block

        .lg
            width 75%
            color #333

            h2
                margin 0; padding 0
                font-size 28px
                font-weight 700
                letter-spacing 1px
                text-transform uppercase

            p
                margin 0; padding 0
                font-size 16px
                line-height 32px
                letter-spacing 1px

            &.left
                text-align right

                h2
                    padding 10px 20px 0 0

                p
                    padding 20px 20px 0 0

            &.right
                text-align left

                h2
                    padding 5px 0 0 20px

                p
                    padding 20px 0 0 20px

.calltoaction
    width 100%; height 540px
    position relative
    overflow hidden

    .background
        width 2048px
        position absolute
        left -248px
        z-index -999

    .wewantyouhere
        position absolute
        top 210px; left 140px
        font-size 28px
        text-align center
        text-transform uppercase
        letter-spacing 1px
        color #333
        z-index 1
    .location
        position absolute
        top 310px; left 148px
    .spark
        width 160px
        position absolute
        right 40px; bottom 20px
        z-index 1

    .email
        padding 8px
        text-align center
        font-size 20px
        font-style italic
        border-width 1px
        border-style solid
        color #FFAD0B
        outline none

    .button 
        background-color #FDBE14
        font-weight 500
        font-size 20px
        border none
        padding 9px

    .clear
        display inline-block

    .mc_embed_signup
        text-align center

        ::-webkit-input-placeholder  /* WebKit, Blink, Edge */
            color #FDBE14
            opacity  1

        :-moz-placeholder  /* Mozilla Firefox 4 to 18 */
            color #FDBE14
            opacity  1

        ::-moz-placeholder  /* Mozilla Firefox 19+ */
            color #FDBE14
            opacity  1

        :-ms-input-placeholder /* Internet Explorer 10-11 */
            color #FDBE14


.pitches
    .sm
        img
            width 70% !important
.agf
    .sm
        img
            width 90% !important
.scf
    .sm
        img
            width 48% !important
.usch
    .sm
        img
            width 35% !important
.techla
    .sm
        img
            width 70% !important

@media only screen and (max-width: 480px)
    .committees
        .committee
            .sm, .lg
                width 100%

                &.left, &.right
                    text-align center

                    h2, p
                        padding-left 0; padding-right 0
