@import '_settings'

normalize-css()

$content-area = 92%

html, body
    width 100%; height 100%

body
    // TODO: load Proxima Nova
    font-family 'Proxima Nova', Helvetica Neue, Helvetica, Arial, sans-serif
    background white

.sections
    width 100%; height 100%

.splash
    width 100%; height 100%
    position relative
    background rgba(253,189,21,1)
    display flex
    align-items center
    justify-content center

    img
        width 100px
    h1
        margin 0 0 0 35px; padding 6px
        font-size 30px
        text-transform uppercase
        letter-spacing 1px
        vertical-align middle
        color white

.committees
    width $content-area
    margin 0 auto; padding 100px 0px 40px 0px

    .info
        margin 0; padding 0 0 40px 0
        text-align center
        font-size 22px
        font-style italic
        line-height 34px
        color #373939

        .highlight
            font-weight 700
            color rgba(253,189,21,1)

            &.black
                color #373939

    .committee
        width 100%
        padding 25px 0
        display block
        font-size 0

        .sm, .lg
            display inline-block
            vertical-align top
            font-size $font-size /* default */

        .sm
            width 25%

            img
                width 55%
                margin 0 auto 20px auto
                display block
                border-radius 9999px
                background rgba(253,189,21,1)

        .lg
            width 75%

            h2
                margin 0; padding 0
                padding-top 10px
                font-size 28px
                font-weight 700
                letter-spacing 2px
                text-transform uppercase
                color #373939

            p
                margin 0; padding 0
                padding-top 20px
                font-size 16px
                line-height 32px
                letter-spacing 1px
                color #444

            &.left
                text-align right

                h2
                    padding-right 20px

                p
                    padding-right 20px

            &.right
                text-align left

                h2
                    padding-left 20px

                p
                    padding-left 20px

.calltoaction
    width 100%; height 540px
    position relative
    overflow hidden

    .background
        width 2048px
        position absolute
        left -258px
        z-index -999

    .wewantyouhere
        position absolute

        font-size 32px
        top 210px; left 110px // mail

        text-align center
        text-transform uppercase
        line-height 40px
        letter-spacing 1px
        color white
        text-shadow 1px 1px 5px rgba(0,0,0,0.25)
        z-index 1

    .location
        width 195px
        position absolute
        top 310px; left 108px //mail

    .spark
        width 160px
        position absolute
        right 40px; bottom 20px
        z-index 1

    .email
        padding 8px
        text-align center
        font-size 20px
        font-style italic
        border-width 1px
        border-style solid
        color #FFAD0B
        outline none

    .button 
        background-color #FDBE14
        font-weight 500
        font-size 20px
        border none
        padding 9px

    .clear
        display inline-block

    .mc_embed_signup
        text-align center
        margin-bottom 100px

        ::-webkit-input-placeholder  /* WebKit, Blink, Edge */
            color #FDBE14
            opacity  1

        :-moz-placeholder  /* Mozilla Firefox 4 to 18 */
            color #FDBE14
            opacity  1

        ::-moz-placeholder  /* Mozilla Firefox 19+ */
            color #FDBE14
            opacity  1

        :-ms-input-placeholder /* Internet Explorer 10-11 */
            color #FDBE14

